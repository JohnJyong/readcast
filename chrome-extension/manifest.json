{
  "manifest_version": 3,
  "name": "ReadCast - Add to Queue",
  "version": "1.0",
  "description": "One-click add current page to ReadCast queue.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["http://127.0.0.1:8000/*"]
}
